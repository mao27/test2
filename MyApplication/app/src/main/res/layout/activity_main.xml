<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="dev.everest.myapplication.MainActivity">
    <LinearLayout
        android:id="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_marginTop="124px">
        <ImageView
            android:layout_width="147dp"
            android:layout_height="147dp"
            android:background="@drawable/a"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/new_version"
            android:textColor="@color/colorBlack"
            android:textSize="32dp"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/layout2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_marginTop="100px"
        android:visibility="gone">
        <ImageView
            android:layout_width="164dp"
            android:layout_height="148dp"
            android:background="@drawable/b"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/discover_version"
            android:textColor="@color/colorBlack"
            android:textSize="32dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="105px"
            android:layout_marginRight="273px"
            android:layout_marginLeft="269px">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_weight="1">
                <Button
                    android:id="@+id/btn_later"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/colorTransparent"
                    android:text="@string/later"
                    android:textColor="@color/colorjGray"
                    android:textSize="36dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_weight="1">
                <Button
                    android:id="@+id/btn_now"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/colorTransparent"
                    android:text="@string/update_now"
                    android:textColor="@color/colorBlack"
                    android:textSize="36dp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
